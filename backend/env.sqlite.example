# Configuración del servidor
PORT=4000
NODE_ENV=development

# Base de datos SQLite (local - no requiere instalación)
# La base de datos se creará automáticamente en ./data/bug-bounty.db

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# w3id IBM Configuration (opcional para desarrollo)
W3ID_CLIENT_ID=dev-client-id
W3ID_CLIENT_SECRET=dev-client-secret
W3ID_REDIRECT_URI=http://localhost:3000/auth/callback

# Mendscan API (opcional)
MENDSCAN_API_URL=https://api.mendscan.com
MENDSCAN_API_KEY=dev-api-key

# Email Configuration (opcional para desarrollo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@example.com
SMTP_PASS=dev-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_PORT=4001

# Cron Jobs
RANKING_UPDATE_CRON=0 0 */15 * * *
MVP_UPDATE_CRON=0 0 1 * * *

# Configuración de desarrollo
ENABLE_MOCK_AUTH=true
ENABLE_MOCK_DATA=true
DEBUG=true 