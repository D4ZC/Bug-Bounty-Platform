# Configuración del servidor
PORT=3001
NODE_ENV=development

# Base de datos SQLite
SQLITE_DB_PATH=./db/database.sqlite3

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# w3id IBM Configuration
W3ID_CLIENT_ID=your-w3id-client-id
W3ID_CLIENT_SECRET=your-w3id-client-secret
W3ID_REDIRECT_URI=http://localhost:3000/auth/callback

# Mendscan API (si está disponible)
MENDSCAN_API_URL=https://api.mendscan.com
MENDSCAN_API_KEY=your-mendscan-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_PORT=3002

# Cron Jobs
RANKING_UPDATE_CRON=0 0 */15 * * *
MVP_UPDATE_CRON=0 0 1 * * * 