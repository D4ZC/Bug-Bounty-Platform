# Configuración del servidor
NODE_ENV=development
PORT=3001

# Base de datos
MONGODB_URI=mongodb://localhost:27017/bug-bounty-platform

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@bugbountyplatform.com

# Mendscan API (integración externa)
MENDSCAN_API_URL=https://api.mendscan.com
MENDSCAN_API_KEY=your-mendscan-api-key
MENDSCAN_W3ID_TOKEN=your-w3id-token

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis (para cache y sesiones)
REDIS_URL=redis://localhost:6379

# WebSocket
WS_PORT=3002

# Cron Jobs
UPDATE_RANKINGS_CRON=0 0 */15 * * *
MVP_AWARDS_CRON=0 0 1 * * *
GULAG_EVENT_CRON=0 0 1 */2 * *

# Blue Points Exchange Rate
BLUE_POINTS_RATE=100

# Challenge Settings
MIN_CHALLENGE_PARTICIPANTS=2
MAX_CHALLENGE_PARTICIPANTS=10
CHALLENGE_DURATION_HOURS=24

# Gulag Settings
GULAG_DURATION_HOURS=48
GULAG_MIN_PARTICIPANTS=5

# MVP Settings
MVP_MIN_POINTS=1000
MVP_STREAK_BONUS_PERCENTAGE=15
TEAM_MVP_BONUS_PERCENTAGE=10

# Shop Settings
SHOP_UPDATE_INTERVAL_HOURS=24
SEASONAL_ITEMS_ENABLED=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
COOKIE_SECRET=your-cookie-secret-change-this

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
DEBUG=true
ENABLE_SWAGGER=true
SWAGGER_URL=/api/docs 